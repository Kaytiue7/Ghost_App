<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <com.github.siyamed.shapeimageview.CircularImageView

            android:id="@+id/profilePhoto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ronaldo"

            />

        <TextView
            android:id="@+id/usernameMy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="17dp"
            android:text="username"/>


    </LinearLayout>

    <!-- Profile Photo -->


    <LinearLayout
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <!-- TextView for label -->
        <EditText
            android:id="@+id/editText"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:hint="Mesaj"
            android:textSize="16sp" />

        <!-- Selected Photo -->

        <ImageView
            android:id="@+id/delete"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:visibility="gone"
            android:layout_gravity="right"
            android:src="@drawable/x"
            />

        <ImageView
            android:id="@+id/selectedPhoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:background="#CCCCCC"
            android:visibility="gone"
            android:src="@drawable/ronaldo"
            />



        <!-- Button to select photo from gallery -->
        <ImageView
            android:id="@+id/selectPhotoButton"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/upload"
            />
    </LinearLayout>
    <Button
        android:id="@+id/gonder"
        android:layout_gravity="center"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:text="Gönder" />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp">


        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/profilePhotoSend"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/my_account"
            android:layout_marginEnd="10dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/usernameSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Username"

                    android:textStyle="bold" />


            </LinearLayout>



            <TextView
                android:id="@+id/post_textSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="İçerik"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp" />

            <!-- Post Image Section -->
            <ImageView
                android:id="@+id/post_imageSend"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/upload"
                android:visibility="visible" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
