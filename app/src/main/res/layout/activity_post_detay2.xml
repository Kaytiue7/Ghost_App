<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".PostDetay2"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!-- Top Menu CardView -->
        <androidx.cardview.widget.CardView
            android:layout_margin="0dp"
            android:id="@+id/topMenu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="1dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="4dp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@color/white">

                <ImageView
                    android:layout_marginTop="2dp"
                    android:id="@+id/imageView7"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:src="@drawable/ghost" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/pp_image_view"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@id/post_image_view"
                android:layout_centerHorizontal="true"

                android:src="@drawable/ronaldo" />
            <TextView
                android:id="@+id/username_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_below="@id/post_text_view"
                android:layout_centerHorizontal="true"
                android:textSize="22sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:text="username" />

            <TextView
                android:id="@+id/date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/username_text_view"
                android:layout_centerHorizontal="true"

                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:text="1 gün önce"
                android:textColor="#BDBDBD"
                android:textSize="18sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/post_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pp_image_view"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:text="Welcome to Ghost"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/post_image_view"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ghost" />




        <!-- RecyclerView -->

    </LinearLayout>

</ScrollView>
